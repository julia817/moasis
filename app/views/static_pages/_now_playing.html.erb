<div class="container-fluid now-playing">
  <h2 class="center" style="margin-bottom:15px;color:#3aabd2;"><strong>上映中</strong></h2>
  <hr style="margin-bottom: 25px;">
  <div class="row">
    <% @movies[0..3].each do |m| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to "/movies/#{m["id"]}", :target => "new" do %>
            <%= image_tag "https://image.tmdb.org/t/p/w500#{m["backdrop_path"]}",
                          class: "img-responsive",
                          alt: "movie pic" %>
            <div class="caption">
              <p><%= m["title"] %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <% @movies[4..7].each do |m| %>
