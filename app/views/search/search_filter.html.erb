<%= provide(:title, '検索') %>

<div class="container-fluid search search-page">
	<h1>色々な検索</h1>

	<%= form_tag search_path, method: :get, class: "search-form form-group" do %>
			<div class="radio-inline">
				<%= label_tag("検索タイプ：") %>
			</div>
			<div class="radio-inline">
				<%= radio_button_tag(:search_type, "movie", @search_type == "movie", checked: "checked") %>
				<%= label_tag(:search_type, "映画", class: "search-type-label") %>
		  </div>
		  <div class="radio-inline">
		    <%= radio_button_tag(:search_type, "people", @search_type == "people") %>
				<%= label_tag(:search_type, "俳優・製作スタッフ", class: "search-type-label") %>
		  </div>
		  <div class="radio-inline">
		    <%= radio_button_tag(:search_type, "user", @search_type == "user") %>
				<%= label_tag(:search_type, "ユーザ", class: "search-type-label") %>
		  </div>
		  <!-- <div class="form-group"> -->
				<%= search_field_tag :looking_for, nil, placeholder: 'キーワード', class: "form-control" %>
				<div class="input-group-btn">
					<%= button_tag(type: 'submit', class: "btn btn-default") do %>
				  	<span class="glyphicon glyphicon-search"></span> 検索
					<% end %>
				</div>
			<!-- </div> -->
	<% end %>

	<%= button_tag("高度な映画検索", :data => { :toggle => "collapse", :target => "#advanced" }, :class => "btn btn-info btn-md") %>
		<div id="advanced" class="collapse">
			<%= form_tag adv_search_path, method: :get, class: 'search-form form-group' do %>
				<div class="form-group">
					<div class="form-inline">
						<label>上映年</label>
						<%= text_field :year, params[:year], class: "form-control" %>
					</div>
				</div>
				<div class="form-group">
					<div class="form-inline">
						<label>俳優・製作スタッフ</label>
						<%= text_field :person1, params[:person1], class: "form-control" %>
						<%= text_field :person2, params[:person2], class: "form-control" %>
					</div>
				</div>
				<div class="form-group">
					<div class="form-inline">
						<label>ジャンル</label>
						<%= text_field :genre, params[:genre], class: "form-control" %>
					</div>
				</div>
				<div class="form-group">
					<div class="form-inline">
						<label>キーワード</label>
						<%= text_field :word, params[:word], class: "form-control" %>
					</div>
				</div>
				<div class="form-group">
					<div class="input-group-btn">
						<%= button_tag(type: 'submit', class: "btn btn-default") do %>
					  	<span class="glyphicon glyphicon-search"></span> 検索
						<% end %>
					</div>
				</div>
			<% end %>
		</div>


	<%= render 'shared/genres_years' %>
		
</div>