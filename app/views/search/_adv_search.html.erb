<h2>高度な映画検索</h2>
<%= form_tag adv_search_path, method: :get, class: 'search-form form-group' do %>
  <div class="form-group">
    <div class="form-inline">
      <label>上映年</label>
      <%= text_field :year, params[:year], class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="form-inline">
      <label>俳優・製作スタッフ(工事中)</label>
      <%= text_field :person1, params[:person1], class: "form-control", disabled: true %>
      <%= text_field :person2, params[:person2], class: "form-control", disabled: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="form-inline">
      <label>ジャンル</label>
      <%= select_tag :genre, options_for_select(@genres), include_blank: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="input-group-btn">
      <%= button_tag(type: 'submit', class: "btn btn-default", style: "border-radius: 5px;") do %>
        <span class="glyphicon glyphicon-search"></span> 検索
      <% end %>
    </div>
  </div>
<% end %>