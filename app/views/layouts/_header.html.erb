<header class="navbar">
	<div class="container-fluid">
		<div class="navbar-header">
			<%= link_to image_tag("logo.png", style:"height:40px;weight:auto", alt: "site logo"),
									root_path, id: "logo" %>
		</div>

		<%= form_tag search_movies_path, method: :get, class: "navbar-form navbar-left" do %>
			<div class="input-group">
				<%= search_field_tag :looking_for, nil, placeholder: '映画タイトル', class: "form-control" %>
				<div class="input-group-btn">
					<%= button_tag(type: 'submit', class: "btn btn-default") do %>
					  <span class="glyphicon glyphicon-film"></span> 検索
					<% end %>
				</div>
			</div>
		<% end %>

		<nav>
			<ul class="nav navbar-nav navbar-right">
				<li>
					<%= link_to root_path do %>
						<i class="glyphicon glyphicon-home"></i> Home
					<% end %>
				</li>
				<li>
					<%= link_to "#" do %>
						<i class="glyphicon glyphicon-search"></i> Search
					<% end %>
				</li>
				<% if logged_in? %>
					<li><%= link_to "Users", users_path %></li>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							<span class="glyphicon glyphicon-user"></span>Account 
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li>
								<%= link_to current_user do %>
									<i class="glyphicon glyphicon-info-sign"></i> Profile
								<% end %>	
							</li>
							<li>
								<%= link_to edit_user_path(current_user) do %>
									<i class="glyphicon glyphicon-search"></i> Edit
								<% end %>
							</li>
							<li class="divider"></li>
							<li>
								<%= link_to logout_path, method: :delete do %>
									<i class="glyphicon glyphicon-log-out"></i> Log Out
								<% end %>
							</li>
						</ul>
					</li>
				<% else %>
					<li>
						<%= link_to signup_path do %>
							<i class="glyphicon glyphicon-user"></i> Sign Up
						<% end %>
					</li>
					<li>
						<%= link_to login_path do %>
							<i class="glyphicon glyphicon-log-in"></i> Log In
						<% end %>
					</li>
				<% end %>
			</ul>
		</nav>
	</div>
</header>