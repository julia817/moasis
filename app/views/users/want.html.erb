<%= provide(:title, "#{@user.username}の観たい映画リスト") %>

<div class="container-fluid container area-width user">
  <div class="row">
    
    <div class="col-md-9">
      <h2>観たい作品のリスト（<%= @count %>本）</h2>

      <% unless @list.blank? %>

        <%= paginate @list %>

        <% @list.each do |m| %>
          <% movie = Movie.details(m.movie_id) %>

          <div class="row movie-box">
            <%= link_to "/movies/#{movie["id"]}", :target => "new" do %>
              <div class="col-md-3">           
                <%= image_tag("https://image.tmdb.org/t/p/w200#{movie["poster_path"]}",
                              :size => "165x247", :class => "img-responsive", :alt => "poster") %>
              </div>
              
              <div class="col-md-9">
                <h3><%= movie["title"] %></h3>
                <h5><%= movie["release_date"] %></h5>
                <% unless movie["overview"].blank? %>
                  <%= movie["overview"] %>
                <% end %>
              </div>
            <% end %>
          
            <div class="col-md-3"> </div>
            <div class="col-md-9">
              <div class="row btn-date">
                <div class="col-md-8 btn-toolbar">
                  <% if current_user?(User.find(@movielist.user_id)) %>
                      <%= button_to "観た",
                                    { :controller => "list_movies", :action => "create_watched_from_want",
                                      :movie_id => "#{movie["id"]}"},
                                    :class => "btn btn-info btn-md", :style => "margin-right:10px;" %>
                      <%= button_to "削除", list_movies_destroy_path,
                                    :method => "delete",
                                    :class => "btn btn-md btn-danger",
                                    :data => { :confirm => "本当に削除しますか？" },
                                    :params => {:movielist_id => @movielist.id, :movie_id => movie["id"]} %>
                  <% end %>
                </div>
                <div class="col-md-4">
                  <span style="text-align:right">追加日：<%= m.created_at.to_s[0..9] %></span>
                </div>
              </div>
            </div>

          </div>
        <% end %>
        <%= paginate @list %>
      <% end %>
    </div>

    <div class="col-md-3">
      <h1>
        <% if @user.picture? == false %>
          <%= image_tag("panda.png", :size => "100x100", :alt => "profile") %>
        <% else %>
          <%= image_tag(@user.picture, :size => "100x100", :alt => "profile pic") %>
        <% end %>
        <%= @user.username %>
        <%= render 'follow_unfollow_button' if logged_in? %>
      </h1>
      <div class="stats">
        <%= render 'shared/stats' %>
      </div>

      <div class="lists">

        <%= link_to "観た映画のリスト", { :action => "watched" }, :class => "btn btn-default btn-block" %>
        <%= link_to "観たい映画のリスト", {}, :class => "btn btn-primary btn-block disabled" %>
        <% if current_user?(@user) %>
          <%= link_to "おすすめ映画のリスト", { :action => "recommend", :my_id => @user.id },
                      :class => "btn btn-default btn-block" %>
        <% elsif logged_in? %>
          <%= link_to "おすすめ映画のリスト", { :action => "recommend", :my_id => current_user.id },
                      :class => "btn btn-default btn-block" %>
        <% else %>
          <%= link_to "おすすめ映画のリスト", { :action => "recommend" },
                      :class => "btn btn-default btn-block" %>
        <% end %>
        <%= link_to "鑑賞履歴レポート", { :action => "report" }, :class => "btn btn-default btn-block" %>
      </div>
    </div>

  </div>
</div>