<% provide(:title, "#{@person["name"]}") %>

<div class="container-fluid person">
  <div class="container-fluid person">
    <div class="col-md-3">
      <%= image_tag("https://image.tmdb.org/t/p/original#{@person["profile_path"]}",
                    :class => "img-responsive", :alt => "profile") %>
    </div>

    <div class="col-md-9">
      <h1><%= @name %></h1>
      <p><strong>生年月日：</strong><%= @person["birthday"] %></p>
      <% unless @person["deathday"].nil? %>
        <p><strong>没年月日：</strong><%= @person["deathday"] %></p>
      <% end %>
      <p><strong>出身地：</strong><%= @person["place_of_birth"] %></p>
      <p><strong>役割：</strong><%= @person["known_for_department"] %></p>

      <!-- <button data-toggle="collapse" data-target="#demo">Collapsible</button> -->
      <%= button_tag("全出演履歴", :data => { :toggle => "collapse", :target => "#history" }, :class => "btn btn-info btn-lg") %>
      <div id="history" class="collapse">
        <ul>
          <% if @person["known_for_department"] == "Acting" %>
            <% @person["movie_credits"]["cast"].each do |movie| %>
              <% if movie["character"].blank? %>
                <% next %>
              <% end %>
              <% Movie.add(movie["id"]) unless Movie.exists?(movie["id"]) %>
              <li><%= movie["release_date"] %>  
                <%= link_to controller: "movies", action: "show", id: "#{movie["id"]}" do %>
                  <strong><%= movie["title"] %></strong>  
                <% end %>
                <%= movie["character"] %> 役</li>
            <% end %>
          <% else %>
            <strong>工事中。。。</strong>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>