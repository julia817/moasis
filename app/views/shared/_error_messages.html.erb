<div class="form-error">
	<% if @user.errors.any? %>
		<div id="error_explanation"> 
			<div class="alert alert-danger">
				計 <%= @user.errors.count %>つのエラーがあります
			</div>
			<ul>
				<% @user.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
</div>